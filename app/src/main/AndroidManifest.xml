<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aplicativoconfeitaria">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/hand_drawn_cartoon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AplicativoConfeitaria">
        <activity android:name=".activity.ActivityDadosConfeitaria"></activity>
        <activity android:name=".activity.NovoEnderecoActivity" />
        <activity android:name=".activity.ActivityDetalhesPedidoUsuario" />
        <activity android:name=".activity.ActivityDetalhesPedido" />
        <activity android:name=".activity.MinhaContaActivity" />
        <activity android:name=".activity.ActivityFinalizarPedido" />
        <activity
            android:name=".activity.CadastroBoloActivity"
            android:exported="true" />
        <activity android:name=".activity.CadastroUsuarioActivity" />
        <activity android:name=".activity.activity_perfil" />
        <activity android:name=".activity.activity_cadastro" />
        <activity android:name=".activity.activity_login" />
        <activity android:name=".activity.activity_detalhes_item" />
        <activity
            android:name=".activity.ActivityPrincipal"
            android:label="@string/app_name"
            android:theme="@style/Theme.AplicativoConfeitaria.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>